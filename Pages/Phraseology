                        ))}
                    </div>

                    <div className="text-center text-sm text-slate-600 dark:text-slate-400">
                        {filteredPhrases.length} frazeologji {selectedCategory !== 'all' && `nÃ« kategorinÃ« "${getCategoryData(selectedCategory).label}"`}
                    </div>
                </div>

                {/* Phrases Grid */}
                {isLoading ? (
                    <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {[...Array(6)].map((_, i) => (
                            <Card key={i}>
                                <CardHeader>
                                    <Skeleton className="h-6 w-3/4" />
                                </CardHeader>
                                <CardContent className="space-y-3">
