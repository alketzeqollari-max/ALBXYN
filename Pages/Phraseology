    const { data: phrases = [], isLoading } = useQuery({
        queryKey: ['phrases'],
        queryFn: () => base44.entities.Phrase.list(),
        initialData: [],
    });

    const categories = [
        { value: 'all', label: 'TÃ« gjitha', icon: 'ðŸ“š', color: 'bg-slate-100 text-slate-800 dark:bg-slate-800 dark:text-slate-300' },
        { value: 'emÃ«rore', label: 'EmÃ«rore', icon: 'ðŸ“', color: 'bg-blue-100 text-blue-800 dark:bg-blue-950/50 dark:text-blue-400' },
        { value: 'mbiemÃ«rore', label: 'MbiemÃ«rore', icon: 'ðŸŽ¨', color: 'bg-purple-100 text-purple-800 dark:bg-purple-950/50 dark:text-purple-400' },
        { value: 'ndajfoljore', label: 'Ndajfoljore', icon: 'âš¡', color: 'bg-amber-100 text-amber-800 dark:bg-amber-950/50 dark:text-amber-400' },
