                                className={`cursor-pointer px-4 py-2 text-sm ${selectedCategory === cat.value ? cat.color : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400'
                                    }`}
                                onClick={() => setSelectedCategory(cat.value)}
